<% if atendimento %>
  <%= atendimento.id %>
  <%= form_with model: atendimento, url: atendimento_path(atendimento), method: :post do |form| %>
<%
=begin
%>
    <%= form.label :atendimento %>
    <%= form.date_field :data %>

    <%= form.time_field :horario %>

    <%= form.label :presenca, "Presença" %>
    <%= form.check_box :presenca %>

    <%= form.number_field :modalidade_id %>
    <%= form.select :acompanhamento_id, Acompanhamento.order(data_inicio: :desc).map { |acompanhamento| ["#{acompanhamento.usuario.nome_completo} (início em #{render_data_brasil acompanhamento.data_inicio})", acompanhamento.id] } %>
    <%= form.select :atendimento_tipo_id, AtendimentoTipo.order(:tipo).map { |atendimento_tipo| [atendimento_tipo.tipo.upcase, atendimento_tipo.id] } %>
    <%= form.hidden_field :consideracoes %>
<%
=end
%>
    <%= fields_for :atendimento_valor, atendimento.atendimento_valor do |valor_form| %>
      <%= valor_form.label :valor %>
      <%= valor_form.number_field :valor %>
      <%= valor_form.label :desconto %>
      <%= valor_form.number_field :desconto %>
      <%= valor_form.label :taxa_porcentagem %>
      <%= valor_form.number_field :taxa_porcentagem %>
    <% end %>

    <%= form.submit %>
  <% end %>
<% end %>

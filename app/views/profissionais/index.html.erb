<% titulo "Profissionais" %>
<h1>Quadro de profissionais</h1>
<p>Profissionais cadastrados: <%= @profissionais.count %></p>
<%= link_to "+ profissional", new_profissional_path %>

<%= form_with url: profissionais_path, method: :get, local: true, data: { turbo_frame: 'profissionais' } do |form| %>
  <%= form.text_field :q, value: params[:q], placeholder: "Pesquisar por nome..." %>
  <%= form.submit "Pesquisar" %>
<% end %>

<%== pagy_nav @pagy %>
<div class="profissionais-container">
  <% @profissionais.each do |pro| %>
    <%= render 'card', profissional: pro %>
  <% end %>
</div>
